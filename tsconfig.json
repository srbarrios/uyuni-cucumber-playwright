{
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "target": "es2020",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist",
    "lib": ["es2024"],
    "declaration": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "testsuite/step_definitions/*.ts",
    "testsuite/helpers/**/*.ts",
    "testsuite/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
