{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true,
        "types": ["node"]
    },
    "include": [
        "testsuite/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
